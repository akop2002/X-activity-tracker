{
  "manifest_version": 3,
  "name": "X Activity Tracker Pro",
  "version": "1.2.0",
  "description": "Track your daily X (Twitter) activity vs goals with advanced analytics and custom goal setting.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "X Activity Tracker Pro"
  }
}